@model List<AppDomainCore.Dto.GetTransactionsDto>

<h1 class="text-center my-4">Transaction List</h1>

@if (Model != null)
{
    <div class="container my-5">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>Source Card</th>
                <th>Destination Card</th>
                <th>Amount</th>
                <th>Transaction Date</th>
                <th>Success</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.SourceCardNumber</td>
                    <td>@transaction.DestinationsCardNumber</td>
                    <td>@transaction.Amount</td>
                    <td>@transaction.TransactionDate</td>
                    <td>@transaction.IsSuccess</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container my-5">
        <p class="alert alert-warning text-center">Null</p>
    </div>
}